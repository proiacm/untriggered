<%= form_for(@entry) do |f| %>
  <%= f.label 'Time for some introspection:' %> <br>
  <%= f.text_area :content %> <br> <br>
  <%= f.label 'Select existing emotion' %> <br>
  <%= f.collection_select :emotion_id, Emotion.all, :id, :name, include_blank: true %> <br>
  <%= f.label 'Or make a new emotion' %>

  <%= f.fields_for :emotion, @entry.build_emotion do |emf| %>
    <%= emf.label 'Emotion name:' %> <br>
    <%= emf.text_field :name %> <br>
  <% end %> <br/>

  <%= f.submit 'Submit' %>
<% end %>